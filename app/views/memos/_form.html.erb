<%= form_with model: @memo, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
<div class="font-serif font-black">
  <div class="field text-2xl text-indigo-900 text-center">
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title, class: "form__text border-4 border-indigo-900 rounded w-full", id:"memo_title" %>
  </div>

  <div class="field text-2xl text-indigo-900 text-center">
    <%= f.label :goal, "Purpose" %><br />
    <%= f.text_area :goal, class: "form__text border-4 border-indigo-900 rounded w-full", id:"memo_goal" %>
  </div>

  <div class="field text-2xl text-indigo-900 text-center">
    <%= f.label :action, "To Do" %><br />
    <%= f.text_area :action, class: "form__text border-4 border-indigo-900 rounded w-full", id:"memo_action" %>
  </div>

   <div class="field text-2xl text-indigo-900 text-center">
    <%= f.label :note, "Note" %><br />
    <%= f.text_area :note, class: "form__text border-4 border-indigo-900 rounded w-full h-64", id:"memo_note" %>
  </div>

  <div class="form-group flex flex-col text-right">
  <div class="flex justify-end">
   <label class="text-2xl text-indigo-900">Status</label>
   <%= f.select :status, [["public", "public"],["private", "private"]], {}, {id: "status", class: "form-control border-2 border-indigo-900 rounded"} %>
  </div>
  </div>

  <div class="actions flex justify-end">
    <%= f.submit "save", class: "form__btn bg-indigo-900 text-white text-2xl font-normal py-3 px-3 rounded" %>
  </div>
</div>
<% end %>