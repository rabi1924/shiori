<%= form_with model: @memo, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "本のタイトル" %><br />
    <%= f.text_field :title, id:"memo_title" %>
  </div>

  <div class="field">
    <%= f.label :goal, "読む目的" %><br />
    <%= f.text_area :goal, class: :form__text, id:"memo_goal" %>
  </div>

  <div class="field">
    <%= f.label :action, "今後のアクションプラン" %><br />
    <%= f.text_area :action, class: :form__text, id:"memo_action" %>
  </div>

   <div class="field">
    <%= f.label :note, "読書メモ" %><br />
    <%= f.text_area :note, class: :form__text, id:"memo_note" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>